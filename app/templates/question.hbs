{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" class="form-control" placeholder=model.question}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control" placeholder=model.author}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" class="form-control" rows="5" placeholder=model.description}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <div id="descriptors">
    <div class="sml-title"><p>{{model.question}} Asked by {{model.author}}</p></div>

    <div id="description"><p>{{model.description}}</p></div>
  </div>
  <br>
  <button class="btn btn-s btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-s btn-danger" {{action 'delete'}}>Delete</button>
{{/if}}
{{outlet}}

<div class="sml-title">Answers</div>
{{#each answer in model.answers}}
  <p>
    {{answer.text}}{{answer.timeCreated}}
  </p>
{{/each}}

<br>
<br>
<br>

<p>{{#link-to 'new-answer' this class="btn btn-success"}}New answer{{/link-to}}</p>
